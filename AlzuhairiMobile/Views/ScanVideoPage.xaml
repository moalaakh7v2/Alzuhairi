                        TextColor="White"  Margin="10"/>
        
        <Button x:Name="btnScanExc" Padding="0,0,0,5" Text="عرض تمارين"
                       Clicked="btnScanExc_Clicked" Margin="10"
                        BackgroundColor="{StaticResource Primary}"
                        TextColor="White"/>
    </StackLayout>
